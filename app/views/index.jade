extends layout

block content

    .jumbotron(style='padding: 1em;')
        img(src='code-metrics.png', height='128', align='left', style='margin-right: 24px;')
        h1
            b code-metrics
        p Compute code metrics for various programming languages


    form(role='form', method='POST', action='/'+uuid)

        .row

            .col-xs-2

                select#lang(name='lang', class='form-control', onchange='set_lang();')
                    option(value='c') C
                    option(value='cc', selected='selected') C++
                    option(value='js') Javascript
                    option(value='py') Python
                    option(value='rb') Ruby

            .col-xs-2

                button.btn.btn-default(type='button', onclick='set_sample()')
                    i.fa.fa-pencil
                    span &nbsp; Sample

            .col-xs-8

                .text-right
                    button.btn.btn-primary(type='submit')
                        i.fa.fa-paper-plane-o
                        span &nbsp; Submit

        input(type='hidden', name='code', value='')
        #editor(class='form-control', style='margin-top: 12px;')

    include information

    a(href='https://github.com/jutge-org/code-metrics')
        img(style='position: fixed; top: 0; right: 0; border: 0; z-index: 9999;', src='https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67', alt='Fork me on GitHub', data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png')

    script.
        start_index()

